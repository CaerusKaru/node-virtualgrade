  },
  "homepage": "https://github.com/CaerusKaru/node-virtualgrade#readme",
  "dependencies": {
    "@types/bookshelf": "^0.9.6",
    "@types/hapi": "^16.1.10",
    "@types/knex": "0.0.64",
    "@types/node": "^8.0.47",
    "bookshelf": "^0.10.4",
    "boom": "^6.0.0",
    "concurrently": "^3.5.0",
    "good": "^7.3.0",
